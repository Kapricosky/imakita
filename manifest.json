{
    "name": "IMAKITA_Summarization",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "IMAKITA automated text summarization",
    "permissions": [
	"contextMenus",
	"contextMenus",
	"storage",
	"tabs",
	"http://*/",
	"https://*/",
	"activeTab"
    ],
    "browser_action":{
	"default_popup": "popup.html"
    },
    "content_scripts": [{
	"matches": ["<all_urls>"],
	"js": ["jquery-3.3.1.min.js", "jquery.highlight-5.js", "imakita_body.js", "preproc_en.js", "content.js"]
    }],

    "background": {
	"scripts": ["jquery-3.3.1.min.js", "jquery.highlight-5.js", "imakita_body.js", "preproc_en.js", "background.js"],
	"persistent": false
    }
}
